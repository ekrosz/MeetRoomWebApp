@model MeetRoomWebApp.Models.ViewModels.SessionViewModel

@{
    ViewData["Title"] = "Delete";
}

<html>
    <body class="bg-dark-blue">
        <h1 class="color-white">Delete</h1>

        <h3 class="color-white">Are you sure you want to delete this?</h3>
        <div>
            <h4 class="color-white">Booking number: @Model.Id</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3 color-white">
                    Booking date:
                </dt>
                <dd class="col-sm-9 color-white">
                    @Html.DisplayFor(model => model.DateSession)
                </dd>
                <dt class="col-sm-3 color-white">
                    Booking duration:
                </dt>
                <dd class="col-sm-9 color-white">
                    @Html.DisplayFor(model => model.SessionDuration)
                </dd>
            </dl>

            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Guests
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Guests)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                        </tr>
                    }
                    <tr><td></td></tr>
                </tbody>
            </table>

            <form class="color-white" asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a class="color-white" asp-action="Index">Back to List</a>
            </form>
        </div>
    </body>
</html>