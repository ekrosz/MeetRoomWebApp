@using MeetRoomWebApp.Models.ViewModels;
@model Dictionary<DateTime, List<SessionViewModel>>;
@{
    ViewData["Title"] = "Schedule";

    string week = string.Empty;
    string day = string.Empty;
    double startY = 0;
    double heightY = 0;
    double finishY = 0;
    }
<html>
    <body class="bg-dark-blue">
        <div class="container bg-dark-blue">
            <div>
                <div class="text-center">
                    <h2>MeetRoom: Schedule</h2>
                    <div class="row flex-nowrap">
                        <div class="col-sm-6 text-left">
                            <button type="button" class="btn btn-primary btn-bg-dark" id="btnIncrement" onclick="IncrementWeekBack(); document.location.reload(true);"><</button>
                        </div>
                        <div class="col-sm-6 text-right">
                            <button type="button" class="btn btn-primary btn-bg-dark" id="btnIncrement" onclick="IncrementWeekForward(); document.location.reload(true);">></button>
                        </div>
                    </div>
                </div>
                <p>
                    <div class="row flex-nowrap">
                        <div class="col-sm">
                            <button type="button" class="btn btn-primary btn-bg-dark" data-toggle="modal" data-target="#ModalBookingNow">
                                Book now
                            </button>

                            <!-- Modal -->
                            <form method="post">
                                <div class="modal fade" id="ModalBookingNow" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title color-black" id="exampleModalLongTitle">Meet room booking</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div>
                                                    <label class="label-with-margin">Desired date: </label>
                                                    <input id="bookingDate"
                                                           name="bookingDate"
                                                           class="form-control"
                                                           type="date" />
                                                </div>
                                                <div>
                                                    <label class="label-with-margin">Desired time: </label>
                                                    <select id="bookingTime"
                                                            name="bookingTime"
                                                            class="form-control"
                                                            asp-items="@(new SelectList(ViewBag.Time, "Time"))"></select>
                                                </div>
                                                <div>
                                                    <label class="label-with-margin">Session duration (minutes): </label>
                                                    <input id="duration"
                                                           name="duration"
                                                           class="form-control"
                                                           type="number"
                                                           min="30"
                                                           max="1440"
                                                           step="30"
                                                           value="30" />
                                                </div>
                                                <div>
                                                    <label class="label-with-margin">Guests: </label>
                                                    <select multiple
                                                            id="users"
                                                            name="users"
                                                            class="form-control"
                                                            asp-items="@(new MultiSelectList(ViewBag.Users, "Id", "Email"))"></select>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                                <button type="submit" class="btn btn-primary">Book now</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>

                        <!-- Days in the week -->
                        @foreach (var item in Model.Keys)
                        {
                            <div class="col-sm text-center">
                                <h5>@(week = item.DayOfWeek.ToString())</h5>
                                <h5>@(day = item.ToShortDateString())</h5>
                            </div>
                        }
                    </div>
                </p>
            </div>

            <div class="row flex-nowrap bg-black">

                <!-- Time in the day -->
                <div class="col-lg bg-dark-blue">
                    @foreach (var item in ViewBag.Time)
                    {
                        <h5>@(item)</h5>
                    }
                </div>

                <!-- Sessions -->
                @foreach (var item in Model)
                 {
                    <div class="col-lg col-margin-left bg-dark-blue" @(finishY = 0)>
                        @foreach (var session in item.Value)
                        {
                            <div class="book-style text-center email" style="margin-top: @(startY = (32 * (((session.DateSession.Hour * 60) + session.DateSession.Minute) / 30)) + 12 - finishY)px; height: @(heightY = 32 * session.SessionDurationInMinutes / 30)px;" @(finishY += startY + heightY)>
                                <h5 class="color-black">Guests</h5>

                                @foreach (var user in session.UserSessions)
                                {
                                    <h6>@string.Join("\n", user.Value.Split('\n').Select(row => row.Remove(row.IndexOf('@'))))</h6>
                                }
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </body>
</html>

<script>
    function IncrementWeekForward() {
        $.ajax({
            type: "POST",
            url: "/Home/IncrementWeekForward",
        });
    }

    function IncrementWeekBack() {
        $.ajax({
            type: "POST",
            url: "/Home/IncrementWeekBack",
        });
    }
</script>
